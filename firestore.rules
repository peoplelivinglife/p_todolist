rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // 사용자별 데이터 접근 규칙
    match /users/{userId} {
      // 사용자는 자신의 문서에만 접근 가능
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // 사용자의 todos 서브컬렉션
      match /todos/{todoId} {
        // 사용자는 자신의 할 일에만 접근 가능
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}